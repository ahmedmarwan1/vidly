@model Vidly_.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Released Date:@Model.ReleaseDate.ToLongDateString()</li>
    <li>Added Date:@Model.DateAdded.ToLongDateString()</li>
    <li>Number In Stock:@Model.NumberInStock</li>
</ul>
